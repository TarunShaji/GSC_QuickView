########################################
# GSC Radar — Backend Environment
# Copy to `.env` and fill in real values
########################################

# ── DATABASE ─────────────────────────────────────────────────────────────────
# PostgreSQL connection string from Railway / Supabase
# Add ?sslmode=require for production
DATABASE_URL=postgresql://<user>:<password>@<host>:<port>/<database>?sslmode=require


# ── APPLICATION URLs ──────────────────────────────────────────────────────────
# Your deployed Vercel frontend URL
FRONTEND_URL=https://your-app.vercel.app

# Your deployed Railway backend URL
BACKEND_URL=https://your-api.railway.app

# Comma-separated allowed CORS origins
ALLOWED_ORIGINS_STR=https://your-app.vercel.app


# ── GOOGLE OAUTH 2.0 ─────────────────────────────────────────────────────────
# From Google Cloud Console → APIs & Services → Credentials → OAuth 2.0
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
# ⚠️  Add this EXACT URL to Google Cloud Console → Authorized redirect URIs
# GOOGLE_REDIRECT_URI is auto-derived as: {BACKEND_URL}/api/auth/google/callback


# ── SUPABASE AUTH ─────────────────────────────────────────────────────────────
# Found in: Supabase Dashboard → Project Settings → API
# This is your project's base URL (NOT the anon key)
SUPABASE_URL=https://your-project-id.supabase.co


# ── SENDGRID TRANSACTIONAL EMAIL ──────────────────────────────────────────────
# From SendGrid Dashboard → Settings → API Keys
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxxx
# Must be a verified sender or domain in SendGrid
SENDGRID_FROM_EMAIL=alerts@yourdomain.com