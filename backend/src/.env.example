########################################
# GSC Radar - Backend Environment File
# Copy this file to `.env` and populate
########################################

# ==============================
# DATABASE CONFIGURATION
# ==============================

# PostgreSQL connection string (SSL required in production)
DATABASE_URL=postgresql://<user>:<password>@<host>:<port>/<database>?sslmode=require


# ==============================
# APPLICATION URL CONFIGURATION
# ==============================

# Public frontend URL (used for OAuth redirects & email links)
FRONTEND_URL=https://dashboard.yourdomain.com

# Public backend API URL (used for OAuth callback registration)
BACKEND_URL=https://api.yourdomain.com

# Comma-separated list of allowed origins for CORS
# Example:
# ALLOWED_ORIGINS=https://dashboard.yourdomain.com,https://admin.yourdomain.com
ALLOWED_ORIGINS=https://dashboard.yourdomain.com


# ==============================
# GOOGLE OAUTH 2.0
# ==============================

# Google Cloud OAuth Web Client Credentials
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret

# Must match Google Console OAuth redirect configuration
GOOGLE_REDIRECT_URI=https://api.yourdomain.com/api/auth/google/callback


# ==============================
# SENDGRID TRANSACTIONAL EMAIL
# ==============================

# SendGrid API key (from SendGrid dashboard)
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxxx

# Verified sender email or domain in SendGrid
SENDGRID_FROM_EMAIL=alerts@yourdomain.com